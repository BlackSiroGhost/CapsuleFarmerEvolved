accounts:
  MyAccount:
    username: "YourRiotUsername"
    password: "YourRiotPassword"
    # Optional: IMAP for automatic 2FA code fetching
    # imapUsername: "your@email.com"
    # imapPassword: "email-password"
    # imapServer: "imap.gmail.com"

# Optional: enable debug logging
# debug: true

# Optional: Discord webhook for drop notifications
# connectorDropsUrl: "https://discord.com/api/webhooks/..."

# Optional: show historical drops on startup
# showHistoricalDrops: true

# Optional: Push notifications via ntfy.sh (recommended, works everywhere)
# Pick a unique topic name and subscribe in the ntfy app or at https://ntfy.sh/<topic>
# ntfyTopic: "capsulefarmer-myname"

# Optional: Email notifications on login failure, crashes, etc.
# Requires a Gmail App Password: https://myaccount.google.com/apppasswords
# smtpServer: "smtp.gmail.com"
# smtpPort: 587
# smtpUser: "you@gmail.com"
# smtpPassword: "xxxx xxxx xxxx xxxx"
# notifyEmail: "you@gmail.com"
